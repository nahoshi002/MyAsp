@model IEnumerable<SV20T1080031.DomainModels.Employee>
@{
    ViewBag.Title = "Quản lí nhân viên";
}

<div class="box box-primary">
    <div class="box-body">

        <!-- Form tìm kiếm-->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="searchValue" class="form-control" placeholder="Nhập tên nhân viên cần tìm...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat btn-info">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Admin/Employee/Create"
                       class="btn btn-flat btn-primary"
                       style="margin-left:5px;">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </span>
            </div>
        </form>
        <!-- Form tìm kiếm-->

        <p>
            Có <strong>1,024</strong> nhân viên. Hiện đang ở trang số 1/200
        </p>

        <!-- Danh sách nhân viên-->
        <div class="box box-primary ">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <!-- Profile Image -->
                    <div class="box box-info">
                        <div class="box-body box-profile ">
                            <div class="container-fluid">
                                <div class="row" style="border-bottom:1px dotted #888888">
                                    <div class="col-sm-8"><p>@item.FullName</p></div>
                                    <div class="col-sm-4">
                                        <td class="text-right">
                                            <a href="~/Admin/Employee/Edit/123" class="btn btn-xs btn-info">
                                                <i class="fa fa-edit"></i>
                                            </a>

                                            <a href="~/Admin/Employee/ChangePass/123" class="btn btn-xs btn-warning">
                                                <i class="fa fa-key"></i>
                                            </a>

                                            <a href="~/Admin/Employee/Delete/123" class="btn btn-xs btn-danger">
                                                <i class="fa fa-remove"></i>
                                            </a>
                                        </td>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <img class="profile-user-img img-responsive" src="https://haiyen.life/wp-content/uploads/2023/08/Meme-meo-dang-yeu-4.jpg" alt="User profile picture">
                                    </div>
                                    <div class="col-sm-8">
                                        <div class="" style="border-bottom:1px dotted #888888">
                                            <p><i class="fa fa-birthday-cake"></i>@item.BirthDate</p>
                                        </div>
                                        <div class="" style="border-bottom:1px dotted #888888">
                                            <p><i class="fa fa-phone"></i>@item.Phone</p>
                                        </div>
                                        <div class="" style="border-bottom:1px dotted #888888">
                                            <p><i class="fa fa-envelope"></i>@item.Email</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
