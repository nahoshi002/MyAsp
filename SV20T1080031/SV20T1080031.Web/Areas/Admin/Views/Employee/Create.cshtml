@model SV20T1080031.DomainModels.Employee
@{

}

<div class="box box-primary">
    <div class=" box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <form method="post" action="~/Admin/Employee/Save">
            <input type="hidden" class="form-control" id="" name="EmployeeID" value="@Model.EmployeeID">
            <div class="form-group">
                <label for="">Họ tên:</label>
                <input type="text" class="form-control" id="" autofocus name="FullName" value="@Model.FullName">
            </div>

            <div class="form-group">
                <label for="">Ngày sinh:</label>
                <input type="text" class="form-control" id="" name="BirthDate" value="@Model.BirthDate">
            </div>

            <div class="form-group">
                <label for="">Địa chỉ:</label>
                <input type="text" class="form-control" id="" name="Address" value="@Model.Address">
            </div>

            <div class="form-group">
                <label for="">Số điện thoại:</label>
                <input type="text" class="form-control" id="" name="Phone" value="@Model.Phone">
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="" name="Email" value="@Model.Email">
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <input accept="image/*" name="Photo" type="file" id="file-input" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="img-preview" src="@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i>
                Lưu dữ liệu
            </button>

            <button type="submit" class="btn">
                <a href="~/Admin/Employee">
                    <i class="fa-solid fa-arrow-left"></i>
                    Quay lại
                </a>
            </button>

        </form>
    </div>
</div>

<script>
    const input = document.getElementById('file-input');
    const image = document.getElementById('img-preview');

    input.addEventListener('change', (e) => {
        if (e.target.files.length) {
            const src = URL.createObjectURL(e.target.files[0]);
            image.src = src;
        }
    });
</script>
