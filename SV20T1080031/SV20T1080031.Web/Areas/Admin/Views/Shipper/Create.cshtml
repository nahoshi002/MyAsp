@model SV20T1080031.DomainModels.Shipper
@{

}

<div class="box box-primary">
    <div class=" box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <form method="post" action="~/Admin/Shipper/Save">
            <input type="hidden" class="form-control" id="" name="ShipperID" value="@Model.ShipperID">
            <div class="form-group">
                <label for="">Tên người giao hàng:</label>
                <input type="text" class="form-control" id="" autofocus name="ShipperName" value="@Model.ShipperName">
            </div>

            <div class="form-group">
                <label for="">Số điện thoại:</label>
                <input type="text" class="form-control" id="" name="Phone" value="@Model.Phone">
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i>
                Lưu dữ liệu
            </button>

            <button type="submit" class="btn">
                <a href="~/Admin/Shipper">
                    <i class="fa-solid fa-arrow-left"></i>
                    Quay lại
                </a>
            </button>

        </form>
    </div>
</div>
