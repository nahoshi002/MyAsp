@model SV20T1080031.DomainModels.Category
@{

}

<div class="box box-primary">
    <div class=" box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <form method="post" action="~/Admin/Category/Save">
            @Html.HiddenFor(m => m.CategoryID)
            <div class="form-group">
                <label for="">Tên loại hàng:</label>
                @Html.ValidationMessageFor(m => m.CategoryName,"", new {@style="color:#f00"})
                @Html.TextBoxFor(m => m.CategoryName, new { @class="form-control", @autofocus = "autofocus"})
            </div>

            <div class="form-group">
                <label for="">Mô tả chi tiết:</label>
                @Html.ValidationMessageFor(m => m.Description,"", new {@style="color:#f00"})
                @Html.TextBoxFor(m => m.Description, new { @class="form-control", @autofocus = "autofocus"})
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i>
                Lưu dữ liệu
            </button>

            <button type="submit" class="btn">
                <a href="~/Admin/Category">
                    <i class="fa-solid fa-arrow-left"></i>
                    Quay lại
                </a>
            </button>

        </form>
    </div>
</div>
