@{
    ViewBag.Title = "Danh sách loại hàng";
}

<div class="box box-primary">
    <div class="box-body">

        <!-- Form tìm kiếm-->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="searchValue" class="form-control" placeholder="Nhập tên loại hàng cần tìm...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat btn-info">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Admin/Category/Create"
                       class="btn btn-flat btn-primary"
                       style="margin-left:5px;">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </span>
            </div>
        </form>
        <!-- Form tìm kiếm-->

        <p>
            Có <strong>1,024</strong> loại hàng. Hiện đang ở trang số 1/200
        </p>

        <!--Danh sách loại hàng-->
        <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap table-reponsive">
            <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row">
                <div class="col-sm-12">
                    <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                        <thead>
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Tên loại hàng</th>
                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Chi tiết</th>
                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending"></th>
                            </tr>
                        </thead>
                        <tbody>

                            <!--Dữ liệu loại hàng truyền vào-->
                            @for (int i = 1; i <= 10; i++)
                            {
                                <tr>
                                    <td>Đồ gia dụng</td>
                                    <td>Chảo, bếp điện, nồi lẩu,...</td>
                                    <td class="text-right">
                                        <a class="btn btn-xs btn-info" href="~/Admin/Category/Edit/1">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a class="btn btn-xs btn-danger" href="~/Admin/Category/Delete/1">
                                            <i class="fa fa-remove"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                            @* <tr role="row" class="even">
                            <td class="sorting_1">ATeo</td>
                            <td>ATEODINANG</td>
                            <td>Quảng Bình</td>
                            <td>12/16 Nguyễn Sinh Cung, TP.Huế, TT.Huế</td>
                            <td>0828817234</td>
                            <td>nahoshi002@gmail.com</td>
                            </tr> *@
                        </tbody>
                        @* <tfoot>
                        <tr>
                        <th rowspan="1" colspan="1">Supplier Name</th>
                        <th rowspan="1" colspan="1">Contact Name</th>
                        <th rowspan="1" colspan="1">Province</th>
                        <th rowspan="1" colspan="1">Address</th>
                        <th rowspan="1" colspan="1">Phone</th>
                        <th rowspan="1" colspan="1">Email</th>
                        </tr>
                        </tfoot> *@
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-5">
                    <div class="dataTables_info" id="example2_info" role="status" aria-live="polite">Hiển thị <strong>10</strong> trên tổng số <strong>1,024</strong> loại hàng</div>
                </div>

                <!--Phân trang-->
                <div class="col-sm-7">
                    <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                        <ul class="pagination">
                            <li class="paginate_button previous disabled" id="example2_previous">
                                <a href="#" aria-controls="example2" data-dt-idx="0" tabindex="0">Trang trước</a>
                            </li>
                            <li class="paginate_button active"><a href="#" aria-controls="example2" data-dt-idx="1" tabindex="0">1</a></li>
                            <li class="paginate_button "><a href="#" aria-controls="example2" data-dt-idx="2" tabindex="0">2</a></li>
                            <li class="paginate_button "><a href="#" aria-controls="example2" data-dt-idx="3" tabindex="0">3</a></li>
                            <li class="paginate_button "><a href="#" aria-controls="example2" data-dt-idx="4" tabindex="0">4</a></li>
                            <li class="paginate_button "><a href="#" aria-controls="example2" data-dt-idx="5" tabindex="0">5</a></li>
                            <li class="paginate_button "><a href="#" aria-controls="example2" data-dt-idx="6" tabindex="0">6</a></li>
                            <li class="paginate_button "><a href="#" aria-controls="example2" data-dt-idx="" tabindex="0">...</a></li>
                            <li class="paginate_button next" id="example2_next"><a href="#" aria-controls="example2" data-dt-idx="7" tabindex="0">Trang tiếp theo</a></li>
                        </ul>
                    </div>
                </div>
                <!--Phân trang-->

            </div>
        </div>
        <!--Danh sách loại hàng-->

    </div>
</div>
