@model SV20T1080031.DomainModels.Supplier
@{
    
}

<div class="box box-primary">
    <div class =" box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <form method="post" action="~/Admin/Supplier/Save">
            <input type="hidden" class="form-control" id="" name="SupplierID" value="@Model.SupplierID">
            <div class="form-group">
                <label for="">Tên nhà cung cấp:</label>
                <input type="text" class="form-control" id="" autofocus name="SupplierName" value="@Model.SupplierName">
            </div>

            <div class="form-group">
                <label for="">Tên giao dịch:</label>
                <input type="text" class="form-control" id="" name="ContactName" value="@Model.ContactName">
            </div>

            <div class="form-group">
                <label for="">Địa chỉ:</label>
                <input type="text" class="form-control" id="" name="Address" value="@Model.Address">
            </div>

            <div class="form-group">
                <label for="">Tỉnh/ Thành phố:</label>
                <select class="form-control" name="Province">
                    <option>-- Chọn tỉnh thành --</option>
                    @foreach (var item in SV20T1080031.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="">Số điện thoại:</label>
                <input type="text" class="form-control" id="" name="Phone" value="@Model.Phone">
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="" name="Email" value="@Model.Email">
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i>
                Lưu dữ liệu
            </button>

            <button type="submit" class="btn">
                <a href="~/Admin/Supplier">
                    <i class="fa-solid fa-arrow-left"></i>
                    Quay lại
                </a>
            </button>

        </form>
    </div>
</div>
