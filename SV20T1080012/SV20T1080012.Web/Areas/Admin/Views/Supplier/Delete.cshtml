@model SV20T1080012.DomainModels.Supplier
@{
    ViewBag.Title = "Xóa nhà cung cấp";
}

<div class="box box-danger">
    <div class=" box-body">
        <form action="~/Admin/Supplier/Delete/@Model.SupplierID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhà cung cấp:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.SupplierName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên giao dịch:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ContactName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Address</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tỉnh/ Thành phố:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Provice</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>

            <button type="submit" class="btn btn-danger">
                <i class="fa-solid fa-floppy-disk"></i>
                Xóa dữ liệu
            </button>

            <button type="submit" class="btn text-danger">
                <a href="~/Admin/Supplier">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Quay lại
                </a>
            </button>

        </form>
    </div>
</div>