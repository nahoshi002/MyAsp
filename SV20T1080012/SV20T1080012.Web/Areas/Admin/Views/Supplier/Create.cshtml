@using SV20T1080012.Web;
@model SV20T1080012.DomainModels.Supplier
@{

}

<div class="box box-primary">
    <div class=" box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <form method="post" action="~/Admin/Supplier/Save">
            @Html.HiddenFor(m => m.SupplierID)
          
            <div class="form-group">
                <label for="">Tên nhà cung cấp:</label>
                @Html.TextBoxFor(m => m.SupplierName, new{@class="form-control",@autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.SupplierName,"",new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label for="">Tên giao dịch:</label>
                @Html.TextBoxFor(m => m.ContactName, new{@class="form-control",@autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.ContactName,"",new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label for="">Địa chỉ:</label>
                @Html.TextBoxFor(m => m.Address, new{@class="form-control",@autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.Address,"",new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label for="">Tỉnh/ Thành phố:</label>
                @Html.DropDownListFor(m => m.Provice, SelectListHelper.Provinces(), new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.Provice,"",new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label for="">Số điện thoại:</label>
                @Html.TextBoxFor(m => m.Phone, new{@class="form-control",@autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.Phone,"",new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                @Html.TextBoxFor(m => m.Email, new{@class="form-control",@autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.Email,"",new{@style="color:#f00"})
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i>
                Lưu dữ liệu
            </button>

            <button type="submit" class="btn">
                <a href="~/Admin/Supplier">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Quay lại
                </a>
            </button>

        </form>
    </div>
</div>