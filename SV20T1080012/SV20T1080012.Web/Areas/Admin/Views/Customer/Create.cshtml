@using SV20T1080012.Web;
@model SV20T1080012.DomainModels.Customer
@{

}

<div class="box box-primary">
    <div class=" box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }    
        <!--Thông báo lỗi -->

        
        <form method="post" action="~/Admin/Customer/Save">  
            @Html.HiddenFor(m => m.CustomerID)
          
            <div class="form-group">    
                <label for="">Tên khách hàng:</label>
                @Html.TextBoxFor(m => m.CustomerName, new{@class="form-control",@autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.CustomerName,"",new{@style="color:#f00"})
               
            </div>

            <div class="form-group">
                <label for="">Tên giao dịch:</label>
                @Html.TextBoxFor(m => m.ContactName,new{@class="form-control"})
                @Html.ValidationMessageFor(m => m.ContactName,"",new{@style="color:#f00"})
               
            </div>

            <div class="form-group">
                <label for="">Tỉnh/ Thành phố:</label>
                @Html.DropDownListFor(m => m.Province, SelectListHelper.Provinces(), new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.Province,"",new{@style="color:#f00"})
            </div>
            <div class="form-group">
                <label for="" >Địa chỉ:</label>
                @Html.TextBoxFor(m => m.Address,new{@class="form-control"})
                @Html.ValidationMessageFor(m => m.Address,"",new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label for="">Số điện thoại:</label>
                @Html.TextBoxFor(m => m.Phone,new{@class="form-control"})
                @Html.ValidationMessageFor(m => m.Phone,"",new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                @Html.TextBoxFor(m => m.Email, new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.Email,"",new{@style="color:#f00"})
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i>
                Lưu dữ liệu
            </button>

            <button type="submit" class="btn">
                <a href="~/Admin/Customer">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Quay lại
                </a>
            </button>
           

        </form>
    </div>
</div>