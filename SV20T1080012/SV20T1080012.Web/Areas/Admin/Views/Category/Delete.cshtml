 @model SV20T1080012.DomainModels.Category
@{
    ViewBag.Title = "Xóa loại hàng";
}

<div class="box box-danger">
    <div class=" box-body">
        <form action="~/Admin/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CategoryName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>
                </div>
            </div>

            <button type="submit" class="btn btn-danger">
                <i class="fa-solid fa-floppy-disk"></i>
                Xóa dữ liệu
            </button>

            <button type="submit" class="btn text-danger">
                <a href="~/Admin/Category">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Quay lại
                </a>
            </button>

        </form>
    </div>
</div>