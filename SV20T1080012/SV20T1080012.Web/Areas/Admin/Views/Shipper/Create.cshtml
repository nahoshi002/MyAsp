@model SV20T1080012.DomainModels.Shipper
@{
   
}

<div class="box box-primary">
    <div class=" box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <form method="post" action="~/Admin/Shipper/Save">
            @Html.HiddenFor(m => m.ShipperID)
            <div class="form-group">
                <label for="">Tên Shipper :</label>
                @Html.TextBoxFor(m => m.ShipperName, new{@class="form-control",@autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.ShipperName,"",new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label for="">Số điện thoại :</label>
                @Html.TextBoxFor(m => m.Phone, new{@class="form-control",@autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.Phone,"",new{@style="color:#f00"})
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i>
                Lưu dữ liệu
            </button>

            <button type="submit" class="btn">
                <a href="~/Admin/Shipper">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Quay lại
                </a>
            </button>

        </form>
    </div>
</div>