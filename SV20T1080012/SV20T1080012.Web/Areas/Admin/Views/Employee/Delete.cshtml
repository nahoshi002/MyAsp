@model SV20T1080012.DomainModels.Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}

<div class="box box-danger">
    <div class=" box-body">
        <form action="~/Admin/Employee/Delete/@Model.EmployeeID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhân viên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FullName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static"> @string.Format("{0:dd/MM/yyyy}",Model.BirthDate)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Address</p>
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>
            <div class="form-group">
                <label for="">Trạng thái:</label>
                <select class="form-control">
                    <option>Đang làm việc</option>
                    <option>Nghĩ việc</option>
                    <option>Công tác</option>
                   
                </select>
            </div>
              <div class="form-group">
                <label for="">Ảnh cá nhân :</label>
              
                <img src="/images/Employee/@Model.Photo" class="card-img-top" alt="..." width="100" height="100">
            </div>
            <button type="submit" class="btn btn-danger">
                <i class="fa-solid fa-floppy-disk"></i>
                Xóa dữ liệu
            </button>

            <button type="submit" class="btn text-danger">
                <a href="~/Admin/Employee">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Quay lại
                </a>
            </button>

        </form>
    </div>
</div>
