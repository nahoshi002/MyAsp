@model SV20T1080012.DomainModels.Employee
@{
}
<div class="box box-primary">
    <div class=" box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <form method="post" enctype="multipart/form-data" action="~/Admin/Employee/Save">
            @Html.HiddenFor(m => m.EmployeeID)
            <div class="form-group">
                <label for="">Tên nhân viên:</label>
                @Html.TextBoxFor(m => m.FullName, new{@class="form-control",@autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.FullName,"",new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label for="">Ngày sinh:</label>
               <input type="text" name="birthday" class="form-control" value="@string.Format("{0:dd/MM/yyyy}",Model.BirthDate)"/>
                @Html.ValidationMessageFor(m => m.BirthDate,"",new{@style="color:#f00"})
            </div>
            <div class="form-group">
                <label for="">Địa chỉ</label>
                @Html.TextBoxFor(m => m.Address, new{@class="form-control",@autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.Address,"",new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label for="">Số điện thoại:</label>
                @Html.TextBoxFor(m => m.Phone, new{@class="form-control",@autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.Phone,"",new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                @Html.TextBoxFor(m => m.Email, new{@class="form-control",@autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.Email,"",new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    @Html.HiddenFor(m => m.Photo)
                    <input type="file" class="form-control" name="uploadPhoto" accept="images/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/Employee/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>


            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i>
                Lưu dữ liệu
            </button>

            <button type="submit" class="btn">
                <a href="~/Admin/Employee">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Quay lại
                </a>
            </button>

        </form>
    </div>
</div>